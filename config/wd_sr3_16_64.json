{
    "name": "sr_patch_64",
    "phase": "train", // train or val
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        // "resume_state": null
        // "resume_state": "experiments/sr_patch_64_241125_090218/checkpoint/I62000_E2067" oriの最良
        // "resume_state": "experiments/sr_patch_64_241120_035300/checkpoint/I26000_E867" // wdの最良
        "resume_state": "experiments/sr_patch_64_250108_112109/checkpoint/I96000_E16001"
    },
    "datasets": {
        "train": {
            "name": "1784",
            "mode": "HR", // whether need LR img
            "dataroot": "/take/dataset/microCT_slices_1784",
            "datatype": "mhd", //lmdb or img, path of img files
            "l_resolution": 16, // low resolution need to super_resolution
            "r_resolution": 64, // high resolution
            "batch_size": 128,
            "num_workers": 8,
            "black_ratio": 0.8,
            "use_shuffle": true,
            "data_length": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "1794",
            "mode": "HR",
            "dataroot": "/take/dataset/microCT_slices_1794_2",
            "datatype": "mhd",
            "maskroot": "/take/dataset/microCT_slices_1794_2/mask",
            "l_resolution": 16,
            "r_resolution": 64,
            "overlap": 4,
            "batch_size": 1024,
            "use_shuffle": false,
            "image_h": 1536, // 1794のheight
            "image_w": 1100, // 1794のwidth
            // "image_h": 1713, // 1792のheight
            // "image_w": 1948, // 1792のwidth
            "data_length": -1 // -1 represents all data used in validation
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 2,
            "out_channel": 1,
            "inner_channel": 64,
            "norm_groups": 16,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                // 4,
                // 8,
                16
                // 32,
                // 64
            ],
            "res_blocks": 3,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 64,
            "channels": 1, //sample channel
            "loss_func": "wd", //wd or l1
            "loss_name": "wd",  //wd or ori
            "conditional": true, // unconditional generation or unconditional generation(super_resolution)
            "under_step_wd_loss": 2000,
            "pd_weight_thre": 0.01,
            "wdloss_weight": 100
        }
    },
    "train": {
        "n_iter": 150000,
        "val_freq": 1000,
        "over_val": 10000,
        "val_i": 290,
        "train_print_freq": 1000,
        "over_train_print": 10000,
        "save_checkpoint_freq": 2000,
        "print_freq": 10,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4
        }
    },
    "wandb": {
        "project": "sr_patch_64"
    }
}